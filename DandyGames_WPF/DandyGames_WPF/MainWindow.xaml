<Window x:Class="DandyGames_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DandyGames_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Background="#FF030303">
    <Grid>
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="Игр в базе: " FontSize="13"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Text="Катриджей в базе: "/>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right" >
                    <ComboBox x:Name="cmbxTheme" Width="120"/>
                </StatusBarItem>
            </StatusBar>
            
            <TabControl>
                <TabItem Header="Поиск игр">

                </TabItem>
                <TabItem Header="Добавление игр">

                </TabItem>
            </TabControl>
            
        </DockPanel>
    </Grid>
</Window>
